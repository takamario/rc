{
  "coc.preferences.formatOnSave": true,
  "diagnostic-languageserver.filetypes": { "dockerfile": "hadolint" },
  "eslint.autoFixOnSave": true,
  "Lua.diagnostics.globals": ["vim"],
  "stylua.configPath": "/Users/takamario/.config/stylua/stylua.toml",
  "stylua.styluaPath": "/opt/homebrew/bin/stylua",
  "tailwindCSS.custom.serverPath": "/opt/homebrew/bin/tailwindcss-language-server",
  "yaml.format.enable": true,
  "languageserver": {
    "ruby-lsp": {
      "command": "ruby-lsp",
      "initializationOptions": {
        "experimentalFeaturesEnabled": false,
        "enabledFeatures": [
          "codeActions",
          "diagnostics",
          "documentHighlights",
          "documentLink",
          "documentSymbols",
          "foldingRanges",
          "formatting",
          "hover",
          "inlayHint",
          "onTypeFormatting",
          "selectionRanges",
          "semanticHighlighting",
          "completion"
        ],
        "formatter": "auto"
      },
      "filetypes": ["ruby"]
    }
  }
}
