{
  "coc.preferences.formatOnSave": true,
  "diagnostic-languageserver.filetypes": { "dockerfile": "hadolint" },
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "eslint.autoFixOnSave": true,
  "Lua.diagnostics.globals": ["vim"],
  "python.formatting.provider": "ruff",
  "python.linting.ruffEnabled": true,
  "rust-analyzer.check.command": "clippy",
  "stylua.configPath": "/Users/takamario/.config/stylua/stylua.toml",
  "stylua.styluaPath": "/opt/homebrew/bin/stylua",
  "tailwindCSS.custom.serverPath": "/opt/homebrew/bin/tailwindcss-language-server",
  "yaml.format.enable": true,
  "languageserver": {
    "ruby-lsp": {
      "command": "ruby-lsp",
      "initializationOptions": {
        "experimentalFeaturesEnabled": false,
        "enabledFeatures": [
          "codeActions",
          "diagnostics",
          "documentHighlights",
          "documentLink",
          "documentSymbols",
          "foldingRanges",
          "formatting",
          "hover",
          "inlayHint",
          "onTypeFormatting",
          "selectionRanges",
          "semanticHighlighting",
          "completion"
        ],
        "formatter": "auto"
      },
      "filetypes": ["ruby"]
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  }
}
